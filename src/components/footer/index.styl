@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-footer
  position: fixed
  bottom: 0
  left: 0
  right: 0
  padding: 14px 18px 18px
  box-sizing: border-box
  display: flex
  justify-content: space-between
  align-items: center
  gap: 12px
  z-index: 123
  background: linear-gradient(180deg, rgba(248, 251, 255, 0.05), rgba(248, 251, 255, 0.75))
  backdrop-filter: blur(10px)
  font-family: 'Space Grotesk', 'Avenir Next', 'Segoe UI', sans-serif

  > .left
    display: flex
    align-items: center

  > .right
    display: flex
    align-items: center

  .zp-button
    border-radius: 999px
    background: rgba(255, 255, 255, 0.95)
    color: #0f172a
    box-shadow: 0 10px 22px rgba(15, 23, 42, 0.12)

  .zp-button .zp-button__content
    letter-spacing: 0.02em
